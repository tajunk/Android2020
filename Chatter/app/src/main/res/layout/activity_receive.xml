<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_view_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_view_title"
        android:text="@string/view_title_text"
        android:layout_gravity="center_horizontal"
        android:textSize="24sp"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/color_text_view_bg"
            android:textColor="@color/color_text_view_text"
            android:id="@+id/text_view_chatter"/>
    </ScrollView>
    <!--<Button-->
        <!--android:layout_width="250dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Button"-->
        <!--android:layout_gravity="center_horizontal"/>-->

</LinearLayout>